<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="grupo6uis.dueloentreleyendas" >
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:debuggable="true" >
        <activity
            android:name=".dueloApp.SeleccionarPersonajeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <data android:mimeType="text/plain" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".dueloApp.PersonajeSeleccionadoActivity" >
        </activity>
        <activity
            android:name=".dueloApp.EstadisticasActivity"
            android:label="@string/title_activity_estadisticas"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>
