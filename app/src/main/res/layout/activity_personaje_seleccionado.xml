<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PersonajeSeleccionadoActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button"
        android:layout_gravity="right" />

    <TextView
        android:id="@+id/firstTextbox"
        android:text="TEXTO firstTextbox"
        android:layout_width="match_parent"
        android:layout_height="62dp" />

    <ListView
        android:id="@+id/firstListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    />

    <ListView
        android:id="@+id/secondListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    />

    <TextView
        android:id="@+id/secondTextbox"

        android:text="TEXTO secondTextbox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


</LinearLayout>
